<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="donacion.donacionsangre.AnadirDonadorController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#switchToMenuDonadores" text="Regresar">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Label text="Ingresar nuevo donador">
               <HBox.margin>
                  <Insets left="160.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <GridPane vgap="10.0">
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Cedula" />
            <Label text="Nombre" GridPane.rowIndex="1" />
            <Label text="Apellido" GridPane.rowIndex="2" />
            <Label text="Tipo de sangre" GridPane.rowIndex="4" />
            <Label text="Tipificacion sanguinea" GridPane.rowIndex="5" />
            <TextField fx:id="txtCedulaDonador" maxWidth="-Infinity" prefHeight="26.0" prefWidth="220.0" GridPane.columnIndex="1" />
            <TextField fx:id="txtNombreDonador" maxWidth="-Infinity" prefWidth="220.0" promptText="max 50 caracteres" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="txtApellidoDonador" maxWidth="-Infinity" prefWidth="220.0" promptText="max 50 caracteres" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <ComboBox fx:id="cmbTipoSangre" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <ComboBox fx:id="cmbTipificacionSangre" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label text="Sexo" GridPane.rowIndex="3" />
            <ComboBox fx:id="cmbSexo" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>
      <Button mnemonicParsing="false" onAction="#anadirDonadorNuevo" text="Ingresar">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
